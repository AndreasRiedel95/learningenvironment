<% extend('admin_base') %>
	<div class="content mb-50">
		<% if(taskinstance.length) { %>
			<p>Dieser Task wird in folgender Taskinstance benutzt</p>
			<ul class="mb-40">
				<% for(let i = 0; i<taskinstance.length; i++) { %>
					<li><a href="<%= taskinstance[i].url %>"><%= taskinstance[i].taskInstance_number %>. <%= taskinstance[i].name %> (<%= taskinstance[i].suffix %>)</a></li>
				<% } %>

			</ul>
		<% } %>

		<p>Möchten sie diesen Task: <a href="<%= task.url %>"><%= task.name %></a> wirklich löschen?</p>
		<form action="" method="POST">
			<div class="form-group mb-40">
				<input class="input" required="true" type="hidden" name="id" value="<%= task._id %>" >
			</div>
			<button class="btn" type="submit">Löschen</button>
		</form>
	</div>